<section class="content-block">
<h2>Show user</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Is admin:</strong>
    <%= @user.is_admin %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>

</ul>

<div class="button-group">
  <%= link "Edit", to: user_path(@conn, :edit, @user), class: "button" %>
  <%= link "Back", to: user_path(@conn, :index), class: "secondary button" %>
</div>
</section>
