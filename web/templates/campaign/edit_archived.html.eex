<section class="content-block">
  <h2>Archive <%= @campaign.name %></h2>

  <%= form_for @changeset, campaign_path(@conn, :update, @campaign), fn f -> %>
    <%= if @changeset.action do %>
      <div class="alert alert-danger">
        <p>Oops, something went wrong! Please check the errors below.</p>
      </div>
    <% end %>

    <input name="archive" value="true" class="hide" />

    <div>
      <%= label f, :archived_reason %>
      <%= select f, :archived_reason, PitchIn.ArchiveReasons.select_options(:campaign) %>
      <%= error_tag f, :archived %>
    </div>

    <%= submit "Archive", class: "expanded alert button" %>
  <% end %>

    
  <div class="expanded button-group">
    <%= unarchive_button(@conn, @campaign) %>
    <%= link "Back to Campaign", to: campaign_path(@conn, :show, @campaign), class: "secondary button" %>
  </div>
</section>
