<h1>Login</h1>

<%= form_for @conn, session_path(@conn, :create), [as: :session], fn f -> %>
  <%= label f, :email %>
  <%= text_input f, :email %>

  <%= label f, :password %>
  <%= password_input f, :password %>

  <%= submit "Log In", class: "button" %>
<% end %>

<%= link "Sign Up", to: user_path(@conn, :new) %>
