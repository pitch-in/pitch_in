<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div>
    <%= label f, :linkedin_url %>
    <%= text_input f, :linkedin_url %>
    <%= error_tag f, :linkedin_url %>
  </div>

  <div>
    <%= label f, :github_handle %>
    <%= text_input f, :github_handle %>
    <%= error_tag f, :github_handle %>
  </div>

  <div>
    <%= label f, :twitter_handle %>
    <%= text_input f, :twitter_handle %>
    <%= error_tag f, :twitter_handle %>
  </div>

  <div>
    <%= label f, :profession %>
    <%= select f, :profession, profession_options %>
    <%= error_tag f, :profession %>
  </div>

  <div>
    <%= label f, :address_zip %>
    <%= text_input f, :address_zip, autocomplete: "postal-code" %>
    <%= error_tag f, :address_zip %>
  </div>

  <div>
    <%= label f, :phone %>
    <%= text_input f, :phone, autocomplete: "tel" %>
    <%= error_tag f, :phone %>
  </div>

  <div>
    <%= label f, :experience_starts_at %>
    <p class="description">
      When did you start working in your current profession?
      This helps us calculate your rough experience level.
    </p>
    <%= us_date_input f, :experience_starts_at, data_end_date: "today" %>
    <%= error_tag f, :experience_starts_at %>
  </div>

  <div class="expanded button-group">
    <%= submit "Update", class: "success button" %>
    <%= link "Edit User Info", to: user_path(@conn, :edit, @user), class: "warning button" %>
  </div>
<% end %>
