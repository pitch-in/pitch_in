<section class="content-block">
  <h2>Edit Need for <%= @campaign.name %></h2>

  <%= render "form.html", changeset: @changeset,
                          action: campaign_ask_path(@conn, :update, @campaign, @ask) %>

  <div class="expanded button-group">
    <%= link "Show", to: campaign_ask_path(@conn, :show, @campaign, @ask), class: "warning button" %>
    <%= archive_button(@conn, @campaign, @ask) %>
    <%= unarchive_button(@conn, @campaign, @ask) %>
    <%= link "Back to Needs", to: campaign_ask_path(@conn, :index, @campaign), class: "secondary button" %>
  </div>

</section>
